pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
#include picoipc.p8

net = {}

function _init()
    net = ipc:new(nil, 0x5f80, 96)
    net:register_callback(99, echo)
end

function echo(message)
    local str1 = ""
    for i=1,#message do
        str1 ..= chr(message[i])
    end
    print(str1)
    net:send_message(message, 100, 0)
end

function _update()
	net:check_message()
end

